# kas-dagger-utils
#
# SPDX-License-Identifier: BSD-3-Clause
#
root = true

# Global
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Git
[.gitignore]
indent_style = tab
trim_trailing_whitespace = false

# YAML, TOML, JSON
[*.{yaml,yml,toml,json}]
indent_size = 2

# JavaScript, TypeScript
[*.{js,ts,cjs,mjs}]
indent_size = 2
